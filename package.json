{
  "name": "custom-cursor-rules",
  "displayName": "Custom Cursor Rules",
  "description": "An extension for Cursor and VSCode that lets you pull .cursorrules files from the https://github.com/PatrickJS/awesome-cursorrules repository",
  "version": "0.2.0",
  "author": "BeilunYang",
  "publisher": "BeilunYang",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onCommand:cursorRules.addRule"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorRules.addRule",
        "title": "Cursor Rules: Add .cursorrules"
      }
    ],
    "configuration": {
      "title": "Cursor Rules",
      "properties": {
        "cursorRules.repos": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://api.github.com/repos/PatrickJS/awesome-cursorrules/contents/rules"
          ],
          "description": "List of GitHub API URLs to fetch cursor rules from. Rules will be displayed in the same order as repositories are listed."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/node": "^22.10.1",
    "@types/vscode": "^1.95.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^0.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beilunyang/vscode-cursor-rules.git"
  }
}
